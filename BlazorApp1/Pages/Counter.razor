@inherits Count;
@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increase me</button>
<button class="btn btn-secondary" @onclick="ResetCount">Reset me</button>
<button class="btn btn-third" @onclick="DecrementCount">Decrease me</button>