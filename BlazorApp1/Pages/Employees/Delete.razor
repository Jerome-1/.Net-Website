@page "/Delete/{Id}"
@using BlazorApp1.Data
@inject EmployeeService employeeService
@inject NavigationManager NavigationManager

<h2>Delete Employee</h2>
<hr />
<h3>Are you sure want to delete this?</h3>
<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>Employee Id:</label>
                <label>@obj.Id</label>
            </div>
            <div class="form-group">
                <label>Employee Name:</label>
                <label>@obj.EmployeeName</label>
            </div>
            <div class="form-group">
                <label>Employerr:</label>
                <label>@obj.Employer</label>
            </div>
            <div class="form-group">
                <label>Role:</label>
                <label>@obj.Role</label>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <label>@obj.Address</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteEmployee" value="Delete" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    Employee obj = new Employee();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => employeeService.GetEmployeeAsync(Convert.ToInt32(Id)));
    }
    protected async void DeleteEmployee()
    {
        await employeeService.DeleteEmployeeAsync(obj);
        NavigationManager.NavigateTo("Employees");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Employees");
    }
}